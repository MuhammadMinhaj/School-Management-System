<%-include('../../partials/admin/adminHead.ejs')%>


<div class="container-luid">
    <div class="row">

        <!-- Admin Brand and Dashboard Menu -->
        <%-include('../../partials/admin/adminSidebar.ejs')%>
        <!-- Dashboard Content -->
        <div class="col-sm-10">
            <!-- Admin Navbar Content -->
            <%-include('../../partials/admin/adminNavbar.ejs')%>

            <!-- Included Here Admin Dashboard Controlling Systems Using as a row-->

            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="container"> <%-include('../../partials/Error/alert.ejs')%></div>
                </div>
                <div class="col-sm-1"></div>
            </div>

            <div class="row py-3 administrator-account">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="card p-4">
                        <div class="card-body">
                            <h4 class="card-title">Change Password</h4>
                            <form action="/auth/change-password" method="POST">
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <h6>Old Password:</h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.oldPassword?'is-invalid':''%>"
                                            name="oldPassword"
                                            placeholder="Enter Your Old Password"
                                                
                                                />
                                            <div class="invalid-feedback">
                                                <%=error.oldPassword%>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <h6>New Password:</h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.newPassword?'is-invalid':''%>"
                                            name="newPassword"
                                            placeholder="Enter Your New Password"
                                            />
                                            <div class="invalid-feedback">
                                                <%=error.newPassword%>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <h6>Confirm Password:</h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.confirmPassword?'is-invalid':''%>"
                                            name="confirmPassword" 
                                            placeholder="Enter Your Confirm Password"
                                            />
                                            <div class="invalid-feedback">
                                                <%=error.confirmPassword%>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <input type="submit" class="btn btn-primary" value="Change Password" />
                            </form>

                        </div>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</div>
<%-include('../../partials/admin/adminFooter.ejs')%>
</body>

</html>