                                               <div class="form-group">
                                                  <label style="font-weight:bold;" for="latestNewsTitle">Name</label>
                                                  <textarea style="background:white;" class="latestNewsTitle" name="name" id="latestNewsTitle"></textarea>
                                               </div> 

                                               <div class="form-group">
                                                  <label style="font-weight:bold;" for="latestNewsTitle">Title</label>
                                                  <textarea style="background:white;" class="latestNewsTitle" name="title1" id="latestNewsTitle"></textarea>
                                               </div> 
                                               <div class="form-group">
                                                  <label style="font-weight:bold;" for="latestNewsTitle">Sub Title</label>
                                                  <textarea style="background:white;" class="latestNewsTitle" name="title2" id="latestNewsTitle"></textarea>
                                               </div>

                                               <div class="form-group">
                                                  <label style="font-weight:bold;" for="latestNewsText">Text</label>
                                                  <textarea style="background:white;height:150px;" class="latestNewsText" name="bio" id="latestNewsText"></textarea>
                                               </div>
                                               
                                            </div>
                                         </div>
                                         <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button class="btn btn-primary">Update</button>
                                         </div>
                                      </form>
                                   </div>
