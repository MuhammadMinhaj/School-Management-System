<%-include('../../partials/head.ejs')%>
<div class="container">
   <div class="row mt-5">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
         <%-include('../../partials/Error/alert.ejs')%>
      </div>
      <div class="col-sm-3"></div>
   </div>
   <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6">
         <div class="card mb-5">
            <div class="card-body">
               <form action="/auth/forgot_password" method="POST">
                  <div class="form-group">
                     <label for="exampleInputEmail1">FORGOT PASSWORD?</label>
                     <input type="email" class="form-control <%=error.email?'is-invalid':''%>" placeholder="Enter Your Email"
                        id="exampleInputEmail1" name="email" value="<%=data?data:''%>">
                     <div class="invalid-feedback">
                        <%=error.email%>
                     </div>
                     <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                     else.</small>
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
               </form>
            </div>
         </div>
      </div>
      <div class="col-sm-3"></div>
   </div>
</div>
