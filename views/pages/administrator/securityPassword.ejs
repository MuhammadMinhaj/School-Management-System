<%-include('../../partials/admin/adminHead.ejs')%>


<div class="container-luid">
    <div class="row">

        <!-- Admin Brand and Dashboard Menu -->
        <%-include('../../partials/admin/adminSidebar.ejs')%>
        <!-- Dashboard Content -->
        <div class="col-sm-10">
            <!-- Admin Navbar Content -->
            <%-include('../../partials/admin/adminNavbar.ejs')%>

            <!-- Included Here Admin Dashboard Controlling Systems Using as a row-->

            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="container"> <%-include('../../partials/Error/alert.ejs')%></div>
                </div>
                <div class="col-sm-1"></div>
            </div>

            <div class="row py-3 administrator-account">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="card p-4">
                        <div class="card-body">
                            <h4 class="card-title"><%=data.securityPassword?'Update Security Password':'Create Security Password'%></h4>
                            <form action="/administrator/security-password" method="POST">
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <h6><%=data.securityPassword?'Old Security Password:':'Administrator Login Password:'%></h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.password?'is-invalid':''%>"
                                            name="password"
                                            placeholder="<%=data.securityPassword?'Enter Your Old Security Password:':'Enter Your Administrator Login Password:'%>"
                                                
                                                />
                                            <div class="invalid-feedback">
                                                <%=error.password%>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <h6>Security Password:</h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.securityPassword?'is-invalid':''%>"
                                            name="securityPassword"
                                            placeholder="Enter Your Security Password:"
                                            />
                                            <div class="invalid-feedback">
                                                <%=error.securityPassword%>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <h6>Confirm Security Password:</h6>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input 
                                            type="text" 
                                            class="form-control <%=error.confirmSecurityPassword?'is-invalid':''%>"
                                            name="confirmSecurityPassword" 
                                            placeholder="Enter Your Confirm Security Password"
                                            />
                                            <div class="invalid-feedback">
                                                <%=error.confirmSecurityPassword%>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <input 
                                type="submit" 
                                class="btn btn-primary"
                                value="<%=data.securityPassword?'Update Password':' Create Password'%>" />
                            </form>

                        </div>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</div>
<%-include('../../partials/admin/adminFooter.ejs')%>
</body>

</html>