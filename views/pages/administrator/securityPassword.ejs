<%-include('../../partials/admin/adminHead.ejs')%>



<div class="row">

    <!-- Admin Brand and Dashboard Menu -->
    <%-include('../../partials/admin/adminSidebar.ejs')%>
    <!-- Dashboard Content -->
    <div class="col-sm-10">
        <!-- Admin Navbar Content -->
        <%-include('../../partials/admin/adminNavbar.ejs')%>

        <!-- Included Here Admin Dashboard Controlling Systems Using as a row-->

        

        <div class="row scroll-style administrator-account" style="background:#6c757d">
            <div class="w-100">
                <%-include('../../partials/Error/alert.ejs')%>
            </div>
            <div class="col-sm-12 px-5">
                <div class="card p-4 mx-5" style="background:#495057;">
                    <div class="card-body px-5">
                        <h4 class="card-title" style="color:#dee2e6;text-transform:uppercase;">
                            <strong>
                                <%=data.securityPassword?'Update Security Password':'Create Security Password'%>
                            </strong>
                        </h4>
                        <form action="/administrator/security-password" method="POST">
                            <div class="form-row" style="color:#adb5bd">
                                <div class="col-md-12 mb-3">
                                    <h6><%=data.securityPassword?'Old Security Password:':'Administrator Login Password:'%></h6>
                                    <div class="input-group">

                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></i></span>
                                        </div>
                                        <input 
                                        type="text" 
                                        class="form-control <%=error.password?'is-invalid':''%>"
                                        name="password"
                                        placeholder="<%=data.securityPassword?'Old Security Password':'Administrator Login Password'%>"
                                            
                                            />
                                        <div class="invalid-feedback">
                                            <%=error.password%>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h6>Security Password:</h6>
                                    <div class="input-group">

                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input 
                                        type="text" 
                                        class="form-control <%=error.securityPassword?'is-invalid':''%>"
                                        name="securityPassword"
                                        placeholder="New Password"
                                        />
                                        <div class="invalid-feedback">
                                            <%=error.securityPassword%>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h6>Confirm Security Password:</h6>
                                    <div class="input-group">

                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input 
                                        type="text" 
                                        class="form-control <%=error.confirmSecurityPassword?'is-invalid':''%>"
                                        name="confirmSecurityPassword" 
                                        placeholder="Confirm Password"
                                        />
                                        <div class="invalid-feedback">
                                            <%=error.confirmSecurityPassword%>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            

                            <input type="submit" style="background-color: #343a4091;
                            border-color: #f8f9fa47;color:#dee2e6bd;" class="btn"  value="<%=data.securityPassword?'Update Password':' Create Password'%>"/>
                        </form>

                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%-include('../../partials/admin/adminFooter.ejs')%>
</body>

</html>