<%-include('../../partials/admin/adminHead.ejs')%>
<div class="row">
   <!-- Admin Brand and Dashboard Menu -->
   <%- include('../../partials/admin/adminSidebar.ejs')%>
   <!-- Dashboard Content -->
   <div class="col-sm-10 ">
      <!-- Admin Navbar Content -->
      <%- include('../../partials/admin/adminNavbar.ejs')%>
      <!-- Included Here Admin Dashboard Controlling Systems Using as a row-->
      <div class="row scroll-style" style="background: #6c757d;">
         <div class="w-100">
            <%-include('../../partials/Error/alert.ejs')%>
         </div>
         <div class="col-sm-12">
            <div class="row py-2">
               <div class="col-sm-12">
                  <nav aria-label="breadcrumb">
                     <ol class="breadcrumb breadcrumb__container">
                        <li class="breadcrumb-item breadcrumb__item active" aria-current="page"><a
                           href="/administrator/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item breadcrumb__item active" aria-current="page"><a
                           href="/administrator/page_create">Page</a></li>
                     </ol>
                  </nav>
                  <form action="/administrator/page_create" method="POST">
                     <div class="card pb-2 pt-3 px-5"
                        style="color:#dee2e6;background: #495057;border: 1px solid #ffffff7a;">
                        <div class="text-center">
                           <h5> Create Page </h5>
                        </div>
                        <div class="form-group">
                           <label for="#title">Select Menu</label>
                           <select name="menuName" class="custom-select <%=error.menuName?'is-invalid':''%>">
                              <option value="" style="font-weight:bold;">...</option>
                              <%for(let m of menu){%>
                              <optgroup label="<%=m.name.toUpperCase()%>">
                                 <option value="<%=m.name%>"><%=m.name%></option>
                                 <%if(m.dropDown.length!==0){%>
                                 <option
                                    style="color:rgba(243, 91, 3, 0.671);font-weight:bold;font-size:15px"
                                    disabled>DROPDOWN LIST:</option>
                                 <%}%>
                                 <%for(let d of m.dropDown){%>
                                 <option class="mr-5" value="<%=d.name%>">** <%=d.name%></option>
                                 <%}%>
                              </optgroup>
                              <%}%>
                           </select>
                           <div class="invalid-feedback">
                              <%=error.menuName%>
                           </div>
                        </div>
                        <div class="form-group">
                           <label for="#title">Title</label>
                           <input type="text" class="form-control <%=error.title?'is-invalid':''%>"
                              name="title" id="title" placeholder="Enter your page title...">
                           <div class="invalid-feedback"><%=error.title%></div>
                        </div>
                        <div class="form-group">
                           <label for="exampleInputPassword1">Post</label>
                           <textarea name="body"
                              class="summerNoteTextEditor <%=error.body?'is-invalid':''%>"></textarea>
                           <div class="invalid-feedback"><%=error.body%></div>
                        </div>
                        <input type="submit" value="Create" class="btn btn-primary btn-sm">
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<%-include('../../partials/admin/adminFooter.ejs')%>
</body>
</html>